CREATE TABLE Espectacles(
	id_espectacle int PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nom varchar(255) NOT NULL,
    fecha varchar(255) NOT NULL,
    hora varchar(255) NOT NULL,
    nom_recinte varchar(255) NOT NULL,
    descripcio varchar(255) NOT NULL,
    CONSTRAINT fk_id_recinte FOREIGN KEY (id_recinte) 			REFERENCES Recinte(id_recinte)
);
CREATE TABLE Recinte(
	id_recinte int PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nom_recinte varchar(255) NOT NULL,
    adre√ßa varchar(255) NOT NULL,
    num_places int NOT NULL
);
CREATE TABLE Usuaris(
	id_usuari int PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nom varchar(255) NOT NULL,
    cognom varchar(255) NOT NULL,
    adreca varchar(255) NOT NULL,
    codi_postal varchar(255) NOT NULL,
    telefono varchar(255) NOT NULL,
    movil varchar(255) NOT NULL,
    pass varchar(255) NOT NULL
);
CREATE TABLE Usuaris(
    CONSTRAINT fk_id_espectacle FOREIGN KEY (id_espectacle) 	REFERENCES Espectacles(id_espectacle),
    CONSTRAINT fk_id_usuari FOREIGN KEY (id_usuari) 			REFERENCES Usuaris(id_usuari)
);

